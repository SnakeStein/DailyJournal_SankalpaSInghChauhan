<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SecureDailyJournal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SecureDailyJournal"
    xmlns:views="clr-namespace:SecureDailyJournal.Views"
    Title="SecureDailyJournal">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Calendar"
        ContentTemplate="{DataTemplate views:CalendarPage}"
        Route="CalendarPage" />

    <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Route="HistoryPage" />
        
    <ShellContent
        Title="Analytics"
        ContentTemplate="{DataTemplate views:AnalyticsPage}"
        Route="AnalyticsPage" />

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />
        
</Shell>
